/* pages/my/my.wxss */

.my-container {
  width: 100%;
  background: linear-gradient(181deg, rgba(13, 204, 255, 1) 15%, rgba(71, 96, 255, 1) 100%);
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.header {
  width: 100%;
  height: 10%;
  font-size: 38rpx;
  font-weight: bold;
  color: white;
}

.body {
  width: 100%;
  height: 65%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: auto;
  padding-top: 15%; 
}

.footer {
  width: 100%;
  height: 10%;
}

.box {
  width: 80%;
  height: calc(150rpx - 10px);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 17px 1px rgba(199, 239, 255, 0.2);
  border-radius: 6px;
  margin: 10px 0 0 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.title {
  height: auto;
  display: flex;
  justify-content: space-between;
  width: 90%;
}

.sub-title {
  width: 90%;
  display: flex;
  justify-content: space-between;
  height: auto;
}

.box2 {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  background: rgba(41, 150, 254);
}

.detail-text {
  height: 16%;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.text {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.enterprise-login {
  width: 80%;
  height: 90rpx;
  border-radius: 50rpx;
  padding: 2px;
  background-image: linear-gradient(0deg, rgba(13, 204, 255, 1) 0%, rgba(63, 112, 255, 1) 100%);
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}
